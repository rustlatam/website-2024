---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<!-- Location section -->
<section id="location" class="bg-[#273b91] text-center text-white py-40">
    <div class="location-section">
        <div class="mx-auto container">
            <div class="grid lg:grid-cols-2">
                <div class="col-lg-5 mx-20 my-auto">
                    <h2 class="uppercase font-bold font-montserrat text-4xl mb-4">{t('location.title')}</h2>
                    <a href="http://www.ingenieria.unam.mx/" style="font-size:1.3em">{t('location.site')}</a>
                    <p class="text-xl mb-10">Circuto Escolar 04360, C.U.<br/> Coyoacán, 04510 Ciudad de México, CDMX, Messico</p>
                    <p class="text-xl">{t('location.description')}</p>
                </div>
                <div class="mx-auto">
                    <iframe class="map-frame" width="512" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=-99.18569147586824%2C19.329560048708867%2C-99.1839373111725%2C19.332668103980126&amp;layer=mapnik&amp;marker=19.331114083737653%2C-99.18481439352036" style="border: 1px solid black"></iframe>
                    <div class="flex gap-2 w-full items-center justify-center mt-1">
                        <a href="geo:19.331114083737653,-99.18481439352036?z=18" target="_blank">Native app</a>&nbsp;|&nbsp;
                        <a href="https://goo.gl/maps/rG49biWAizYDLBeC6" target="_blank">Google Maps</a>&nbsp;|&nbsp;
                        <a href="https://www.openstreetmap.org/?mlat=19.33111&amp;mlon=-99.18481#map=19/19.33111/-99.18481" target="_blank">OpenStreetMap</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>